
<form class="form-horizontal" action="/admin/useredit/{{data._id}}" method="POST">
<fieldset>

<!-- Form Name -->
<legend>Edit form</legend>

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="itemName">Name</label>  
  <div class="col-md-4">
  <input id="itemName" name="name" type="text" placeholder="name"  value="{{data.name}}"  class="form-control input-md" required="">
  
  </div>
</div>

<!-- Select Basic -->

<!-- Text input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="Date">Email</label>  
  <div class="col-md-4">
  <input id="Date" value="{{data.email}}" name="email" type="email" placeholder="Date" class="form-control input-md" required="">
 
  </div>
</div>

<!-- Textarea -->
<div class="form-group">
  <label class="col-md-4 control-label" for="Description">Mobile</label>
  <div class="col-md-4">                     
    <textarea class="form-control" id="Mobile"   name="Mobile"  >{{data.Mobile}}</textarea>
  </div>
</div>

<!-- File Button --> 
<div class="form-group">
  <label class="col-md-4 control-label" for="filebutton">Address</label>
  <div class="col-md-4">
    <input id="filebutton" name="Address" value="{{data.Address}}" class="input-file" type="text">
  </div>
</div>

<!-- Button -->
<div class="form-group">

  <div class="col-md-4">
    <button id="singlebutton" type="submit" name="singlebutton" class="btn btn-primary">Save Changes</button>
  </div>
</div>

</fieldset>
</form>